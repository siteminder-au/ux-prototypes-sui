{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    // Needed for code coverage to be calculated correctly
    "sourceMap": true,
    // Unit tests fail without this e.g. mock issues https://github.com/kulshekhar/ts-jest/issues/120
    "esModuleInterop": true,
    // Volar & vue-tsc bug https://github.com/johnsoncodehk/volar/issues/1153
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "src/cct-shim.d.ts",
    "src/**/*.cy.ts",
    "cypress-component-testing/**/*.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "test/setup-after-env.ts",
  ]
}
