{
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    // we want our compiled js code to use import/export instead of require/module.exports
    // 'ES2015' is used as in the future when we upgrade to  rollup v4 only supports ES2015, ES2020 or ESNext
    "module": "ES2015",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src/app",
    "baseUrl": ".",
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2016",
      "es2017",
      "es2015",
      "dom.iterable",
      "scripthost"
    ],
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "sourceMap": true,
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "./src/app/*"
  ],
  "compileOnSave": false
}
