{
  // TODO: this file purely exists to pass to vue-tsc
  // We can remove this file and revert back to referencing tsconfig when this is merged: https://github.com/vuejs/vue-test-utils/pull/1999
  // currently if spec files are included for type checking, vue-tsc will fail
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Needed for code coverage to be calculated correctly
    "sourceMap": true,
    // Unit tests fail without this e.g. mock issues https://github.com/kulshekhar/ts-jest/issues/120
    "esModuleInterop": true,
    // Volar & vue-tsc bug https://github.com/johnsoncodehk/volar/issues/1153
    "jsx": "preserve"
  },
  // adding this vueCompilerOptions to fix a random error about JSX appearing for template & bare html elements. See: https://github.com/nuxt/typescript/issues/537#issuecomment-1061595875
  "vueCompilerOptions": {
    "experimentalCompatMode": 2, // delete after migrating to vue3 (or nuxt3)
    "experimentalTemplateCompilerOptions": {
      "compatConfig": {
        "MODE": 2
      } // delete after migrating to vue3 (or nuxt3)
    },
    "target": 2.7 // required for volar compatibility
  },
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "src/**/*.spec.ts",
    "test/**/*.spec.ts",
    "cypress-component-testing",
    "src/**/*.cy.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ]
}
