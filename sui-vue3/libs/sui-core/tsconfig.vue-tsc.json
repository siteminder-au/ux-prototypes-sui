{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Don't check .d.ts files, specifically in node_modules@vueuse used in sm-date-picker
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules",
    "**/*.stories.ts",
    "src/**/*.spec.ts",
    "test/**/*.spec.ts",
    "src/app/samples/**/*",
  ]
}
