{
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "allowSyntheticDefaultImports": true,
    // we want our compiled js code to use import/export instead of require/module.exports
    // 'ES2015' is used as rollup v4 supports ES2015, ES2020 or ESNext
    "module": "ES2015",
    // needed by rollup 4. see: https://vitejs.dev/guide/migration#rollup-4
    "moduleResolution": "bundler",
    "target": "ES2022",
    "outDir": "dist",
    "rootDir": "src/app",
    "baseUrl": ".",
    "lib": ["es5", "es6", "dom", "es2016", "es2017"],
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.stories.ts"
  ],
  "include": [
    "./src/app/*"
  ],
  "compileOnSave": false
}
