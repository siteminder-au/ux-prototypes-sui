{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [ "node", "jest" ],
    "paths": {
      "@/*": [
        "src/app/*"
      ]
    },
    "lib": [
      "es2015",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/app/*.ts",
    "src/app/**/*.ts",
    "node_modules/tsconfig/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
